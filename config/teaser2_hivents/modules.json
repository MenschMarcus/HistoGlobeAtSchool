  "AreaStyler" :
  {
    "stylers" :
    [
      {
        "mapping": "config/teaser2_hivents/data/spread.json",
        "domain": [0, 1],
        "fillColor": {
          "range": ["#E1D84D", "#E1D84D"],
          "fallback": "#E1D84D",
