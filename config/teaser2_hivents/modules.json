  "HiventController" :
  {
    "dsvConfigs":
    [
      {
        "path": "config/teaser2_hivents/data/event.csv",
        "ignoredLines" : [1,2,3,4,5,6],
        "indexMapping" :
        {
          "id"          : 0,
          "name"        : 1,
          "description" : 7,
          "startDate"   : 2,
          "endDate"     : 2,
          "displayDate" : 2,
