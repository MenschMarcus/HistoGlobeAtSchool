<Layer name="world" srs="+init=epsg:4326">
  <StyleName>landstyle</StyleName>
  <Datasource>
    <Parameter name="type">shape</Parameter>
    <Parameter name="file">data/ne_10m_land</Parameter>
  </Datasource>
</Layer>

<Layer name="grid" srs="+init=epsg:4326">
  <StyleName>gridstyle</StyleName>
  <Datasource>
    <Parameter name="type">shape</Parameter>
    <Parameter name="file">data/ne_10m_graticules_10</Parameter>
  </Datasource>
</Layer>

</Map>
