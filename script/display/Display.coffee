window.HG ?= {}

class HG.Display

  ##############################################################################
  #                            PUBLIC INTERFACE                                #
  ##############################################################################

  # ============================================================================
  hgInit: (hgInstance) ->
    HG.Display.CONTAINER ?= hgInstance._map_canvas

  # ============================================================================
  focus: (hivent) ->
    @setCenter
      x: hivent.long
      y: hivent.lat

  ##############################################################################
  #                             STATIC MEMBERS                                 #
  ##############################################################################

  @Z_INDEX = 0
  @CONTAINER = null
